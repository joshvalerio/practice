 {% extends 'base.html.twig' %}

{% block title %}View Products{% endblock %}

{% block body %}
<h1>Product</h1>
<a href="{{ path ('product_index')}}"> View Products </a> 



<table>
    <tbody>
        <tr>
            <th>Name</th>
            <td> {{ product.name }} </td>
        <tr>
        <tr>
            <th>Description</th>
            <td> {{ product.description }} </td>
        <tr>
        <tr>
            <th>Size</th>
            <td> {{ product.size }} </td>
        <tr> 
    </tbody>       
</table>

<a href="{{ path ('product_edit', {'id': product.id}) }}"> Edit Product </a> 
<a href="{{ path ('product_delete', {'id': product.id}) }}"> Delete Product </a> 



{% endblock %}